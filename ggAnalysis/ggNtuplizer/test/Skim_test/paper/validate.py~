import ROOT as r


lowX=0.21
lowY=0.70
lumi  = r.TPaveText(lowX, lowY+0.06, lowX+0.15, lowY+0.16, "NDC")
lumi.SetTextFont(61)
lumi.SetTextSize(0.08)
lumi.SetBorderSize(   0 )
lumi.SetFillStyle(    0 )
lumi.SetTextAlign(   12 )
lumi.SetTextColor(    1 )
lumi.AddText("CMS Preliminary")

legend = r.TLegend(0.65, 0.60, 0.90, 0.76)

f=r.TFile('../QCD_23.root')
c = r.TCanvas('c','',600,800)
h1 = f.Get('InvariantMass_of_3_particle_in_tau1anti_iso')
h2 = f.Get('InvariantMass_of_3_particle_in_tau2anti_iso')
h3 = f.Get('InvariantMass_of_3_particle_in_tau1antiso_tau2antiiso')
hiso = f.Get('InvariantMass_of_3_particle_in_tau1iso_tau2iso')
#h1 = f.Get('InvariantMass_of_taumu_with__in_tau1anti_iso')   
h1.Rebin(6)
#h2 = f.Get('InvariantMass_of_taumu_with__in_tau2anti_iso')
h2.Rebin(6)
#h3 = f.Get('InvariantMass_of_taumu_with__in_tau1antiso_tau2antiiso')
h3.Rebin(6)
#hiso = f.Get('InvariantMass_of_taumu_with__in_tau1iso_tau2iso')
hiso.Rebin(6)
h1.Add(h2)
h1.Add(h3,-1)
hiso.SetLineColor(r.kRed)
hiso.SetTitle('')
hiso.GetYaxis().SetTitle('Event')
hiso.Draw()
h1.SetLineColor(r.kBlue)
h1.SetTitle('validation of Invariant Mass of taumu pair')
r.gStyle.SetOptStat(00000)
h1.GetYaxis().SetTitle('Event')
h1.GetXaxis().SetTitle('M_{#mu#tau#tau} in GeV')
h1.SetTitle('')
h1.Draw('same')
legend.AddEntry(hiso,"Obsetved","l")
legend.AddEntry(h1,"Estimated","l")
legend.Draw()
lumi.Draw()
c.Print('InvariantMass_of_3_particle.png')
